@model Demo.DoSomeBootstrapThing.LayoutTest.Models.MintModel

@{
	ViewBag.Title = "Mint";
}

<h2>Mint</h2>

@*
	This is to display "Create new login" screen similar to Mint.com
		(refer to ~\Content\create new account - mint.png)
*@


<form id="mintForm" method="POST" class="form-horizontal">
	<fieldset>
		<legend>Create a new Account</legend>

		<div class="form-group">
			<label class="control-label col-sm-2">Your Email</label>
			<div class="col-sm-10">
				<input type="text" id="yourEmail" class="form-control input-sm"/>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2">Confirm Email</label>
			<div class="col-sm-10">
				<input type="text" id="confirmEmail" class="form-control input-sm"/>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2">Country</label>
			<div class="col-sm-10">
				@Html.DropDownListFor(m => m.CountryListItems, @Model.CountryListItems, new {@class = "form-control input-sm"})
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2">Zip Code</label>
			<div class="col-sm-10"><input type="text" id="zipCode" class="form-control input-sm"/>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2">Password</label>
			<div class="col-sm-10"><input type="password" id="password" class="form-control input-sm"/>
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-sm-2">Confirm Password</label>
			<div class="col-sm-10"><input type="password" id="confirmPassword" class="form-control input-sm"/>
			</div>
		</div>
	</fieldset>

	<div class="form-group">
		<div class="form-group checkbox col-sm-offset-2 col-sm-10">
			<label>
				<input type="checkbox" id="checkboxSuccess" value="option1">
				Yes, I agreet to the Terms of Use
			</label>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-warning">Sign Up</button>
		</div>
	</div>
</form>

















