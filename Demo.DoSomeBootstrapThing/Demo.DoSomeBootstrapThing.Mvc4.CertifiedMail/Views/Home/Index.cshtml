@model Demo.DoSomeBootstrapThing.Mvc4.CertifiedMail.Models.HomeModel


@{
	ViewBag.Title = "Index";
}

@section CSS {
	<link href="~/Content/Home/Index.css" rel="stylesheet" />
}


<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">W&amp;L Certified Mail</h3>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-5">
				@using (Html.BeginForm("SearchByClient", "Home", FormMethod.Post,
						new { id = "searchByClientForm", @class = "form-horizontal" }))
				{
					<fieldset>
						<legend>Search by Client</legend>

						@{
					var labelObject = new { @class = "col-md-3 control-label" };
					var textBoxObject = new { @class = "form-control" };
						}

						<div class="form-group">
							@Html.LabelFor(m => m.FileNumber, labelObject)
							<div class="col-md-9">@Html.TextBoxFor(m => m.FileNumber, textBoxObject)</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.FirstName, labelObject)
							<div class="col-md-9">@Html.TextBoxFor(m => m.FirstName, textBoxObject)</div>
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.LastName, labelObject)
							<div class="col-md-9">@Html.TextBoxFor(m => m.LastName, textBoxObject)</div>
						</div>

						<button type="submit" class="btn btn-default">Search by Client</button>
					</fieldset>
				}
			</div>

			<div class="col-md-1 OR">
				<h3><span class="label label-default">OR</span></h3>
			</div>
			<div class="col-md-5">
				<div class="row">
					@using (Html.BeginForm("Upload", "Home", FormMethod.Post,
								new { id = "uploadFileForm", enctype = "multipart/form-data" }))
					{
						<fieldset>
							<legend>Search by Uploading File</legend>

							<div class="form-group">
								<input type="file" class="form-control" name="file" id="file" />
							</div>
							<button type="submit" class="btn btn-default">Upload File</button>
						</fieldset>
					}
				</div>
			</div>
		</div>

		<div class="container"></div>

		<div class="container"></div>
	</div>
</div>











